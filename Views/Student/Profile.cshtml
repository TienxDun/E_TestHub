@{
    ViewData["Title"] = "Quản lý tài khoản - Sinh Viên";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link href="~/css/shared/dashboard.css" rel="stylesheet">
    <link href="~/css/student/profile.css" rel="stylesheet">
}

<!-- Profile Content -->
<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <h1 class="profile-title">Quản lý tài khoản</h1>
        
        <!-- Avatar Section -->
        <div class="profile-avatar-section">
            <div class="profile-avatar">
                <i class="fas fa-user"></i>
            </div>
            <button class="upload-btn">
                <i class="fas fa-upload me-2"></i>Tải lên
            </button>
        </div>
    </div>
    
    <!-- Profile Form -->
    <div class="profile-form">
        <form>
            <!-- First Row -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" value="Võ Nguyễn Thanh Hiếu" readonly>
                </div>
                <div class="form-group">
                    <label class="form-label">Lớp</label>
                    <input type="text" class="form-control" value="T2307H" readonly>
                </div>
            </div>
            
            <!-- Second Row -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Ngày sinh</label>
                    <input type="text" class="form-control" value="05/01/2005" readonly>
                </div>
                <div class="form-group">
                    <label class="form-label">Mã số sinh viên</label>
                    <input type="text" class="form-control" value="23DH111071" readonly>
                </div>
            </div>
            
            <!-- Third Row -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" value="thanhhieu5100@gmail.com">
                </div>
                <div class="form-group">
                    <label class="form-label">Số điện thoại</label>
                    <input type="tel" class="form-control" value="0969123456">
                </div>
            </div>
            
            <!-- Password Row -->
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Mật khẩu hiện tại</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu">
                    <a href="#" class="forgot-password-link">Quên mật khẩu?</a>
                </div>
                <div class="form-group">
                    <label class="form-label">Mật khẩu mới</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu">
                </div>
            </div>
            
            <!-- Save Button -->
            <div class="form-group">
                <button type="submit" class="save-btn">Lưu thông tin</button>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>