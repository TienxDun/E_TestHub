<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - eTestHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/shared/dashboard.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var userRole = Context.Session.GetString("UserRole") ?? "Guest";
        var userName = Context.Session.GetString("UserName") ?? "User";
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    }

    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <div class="brand-logo">
                    <i class="fas fa-graduation-cap"></i>
                    <span class="brand-name">E_TestHub</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <!-- User Info Card -->
            <div class="user-card">
                <div class="user-info">
                    <p class="sidebar-user-name">@userName</p>
                    <p class="sidebar-user-role">@userRole</p>
                </div>
            </div>

            <!-- Navigation Menu -->
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <p class="nav-section-title">Menu chính</p>
                    
                    @{
                        var dashboardController = userRole switch
                        {
                            "Admin" => "Admin",
                            "Teacher" => "Teacher",
                            "Student" => "Student",
                            _ => "Home"
                        };
                    }

                    <a href="@Url.Action("Dashboard", dashboardController)" 
                       class="nav-item @(currentAction == "Dashboard" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>

                    @if (userRole == "Student")
                    {
                        <a href="@Url.Action("Classes", "Student")" 
                           class="nav-item @(currentAction == "Classes" ? "active" : "")">
                            <i class="fas fa-university"></i>
                            <span>Lớp học</span>
                        </a>
                        <a href="@Url.Action("MyExams", "Student")" 
                           class="nav-item @(currentAction == "MyExams" ? "active" : "")">
                            <i class="fas fa-file-alt"></i>
                            <span>Bài thi của tôi</span>
                        </a>
                        <a href="@Url.Action("ExamScores", "Student")" 
                           class="nav-item @(currentAction == "ExamScores" ? "active" : "")">
                            <i class="fas fa-chart-bar"></i>
                            <span>Điểm thi</span>
                        </a>
                    }
                    else if (userRole == "Teacher")
                    {
                        <a href="@Url.Action("ExamManagement", "Teacher")" 
                           class="nav-item @(currentAction == "ExamManagement" ? "active" : "")">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Quản lý đề thi</span>
                        </a>
                        <a href="@Url.Action("QuestionBank", "Teacher")" 
                           class="nav-item @(currentAction == "QuestionBank" ? "active" : "")">
                            <i class="fas fa-folder-open"></i>
                            <span>Ngân hàng câu hỏi</span>
                        </a>
                        <a href="@Url.Action("ManageClasses", "Teacher")" 
                           class="nav-item @(currentAction == "ManageClasses" ? "active" : "")">
                            <i class="fas fa-users"></i>
                            <span>Lớp giảng dạy</span>
                        </a>
                        <a href="@Url.Action("ViewResults", "Teacher")" 
                           class="nav-item @(currentAction == "ViewResults" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Kết quả thi</span>
                        </a>
                    }
                    else if (userRole == "Admin")
                    {
                        <a href="@Url.Action("UserManagement", "Admin")"
                           class="nav-item @(currentAction == "UserManagement" ? "active" : "")">
                            <i class="fas fa-users-cog"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                        <a href="@Url.Action("SchoolManagement", "Admin")"
                           class="nav-item @(currentAction == "SchoolManagement" ? "active" : "")">
                            <i class="fas fa-school"></i>
                            <span>Quản lý trường học</span>
                        </a>
                        <a href="@Url.Action("Reports", "Admin")"
                           class="nav-item @(currentAction == "Reports" ? "active" : "")">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo thống kê</span>
                        </a>
                        <a href="@Url.Action("AuditLogs", "Admin")"
                           class="nav-item @(currentAction == "AuditLogs" ? "active" : "")">
                            <i class="fas fa-history"></i>
                            <span>Nhật ký kiểm tra</span>
                        </a>
                        <a href="@Url.Action("SystemSettings", "Admin")"
                           class="nav-item @(currentAction == "SystemSettings" ? "active" : "")">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt hệ thống</span>
                        </a>
                    }
                </div>

                <!-- Quick Actions Section -->
                <div class="nav-section">
                    <p class="nav-section-title">Thao tác nhanh</p>
                    
                    <a href="@Url.Action("Notifications", "Student")" 
                       class="nav-item @(currentAction == "Notifications" ? "active" : "")">
                        <i class="fas fa-bell"></i>
                        <span>Thông báo</span>
                        <span class="badge">3</span>
                    </a>

                    @if (userRole == "Student")
                    {
                        <a href="@Url.Action("Profile", "Student")" 
                           class="nav-item @(currentAction == "Profile" ? "active" : "")">
                            <i class="fas fa-user-circle"></i>
                            <span>Tài khoản</span>
                        </a>
                    }
                    else if (userRole == "Teacher")
                    {
                        <a href="@Url.Action("Profile", "Teacher")" 
                           class="nav-item @(currentAction == "Profile" ? "active" : "")">
                            <i class="fas fa-user-circle"></i>
                            <span>Tài khoản</span>
                        </a>
                    }
                    else if (userRole == "Admin")
                    {
                        <a href="@Url.Action("Profile", "Admin")" 
                           class="nav-item @(currentAction == "Profile" ? "active" : "")">
                            <i class="fas fa-user-circle"></i>
                            <span>Tài khoản</span>
                        </a>
                    }
                </div>
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Home")" 
                   class="nav-item logout-btn" 
                   onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-main-content">
            <!-- Mobile Header (Only visible on mobile) -->
            <div class="mobile-header">
                <button class="mobile-toggle-btn" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="mobile-brand">
                    <i class="fas fa-graduation-cap" style="color: #2E8BE9; font-size: 24px;"></i>
                    <span style="font-weight: 700; color: #2F3542; font-size: 18px;">E_TestHub</span>
                </div>
            </div>

            <div class="container-fluid px-4 py-4">
                <div class="dashboard-content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Sidebar toggle for mobile
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const sidebar = document.querySelector('.sidebar');
            
            // Create overlay element
            const overlay = document.createElement('div');
            overlay.className = 'sidebar-overlay';
            document.body.appendChild(overlay);
            
            // Function to toggle sidebar
            function toggleSidebar() {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
            }
            
            // Function to close sidebar
            function closeSidebar() {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            }
            
            // Toggle sidebar from sidebar button (inside sidebar)
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', toggleSidebar);
            }
            
            // Toggle sidebar from mobile header button
            if (mobileMenuToggle) {
                mobileMenuToggle.addEventListener('click', toggleSidebar);
            }
            
            // Close sidebar when clicking overlay
            overlay.addEventListener('click', closeSidebar);
            
            // Close sidebar when clicking nav item on mobile
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    if (window.innerWidth <= 767) {
                        closeSidebar();
                    }
                });
            });
            
            // Close sidebar on window resize to desktop
            window.addEventListener('resize', function() {
                if (window.innerWidth > 767) {
                    closeSidebar();
                }
            });
        });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>