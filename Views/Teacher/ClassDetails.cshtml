@{
    ViewData["Title"] = $"Chi tiết lớp học - {ViewBag.ClassInfo.Name}";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link href="~/css/shared/dashboard.css" rel="stylesheet">
    <link href="~/css/teacher/class-details.css" rel="stylesheet">
}

<div>
    <!-- Breadcrumb Navigation -->
    <div class="breadcrumb-nav">
        <a href="@Url.Action("ManageClasses", "Teacher")" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
    </div>

    <!-- Page Header -->
    <div class="class-details-header">
        <div class="header-content">
            
            <div class="class-info">
                <h1 class="class-title">@ViewBag.ClassInfo.Name</h1>
                <div class="class-meta">
                    <span class="meta-item">
                        <i class="fas fa-users"></i>
                        @ViewBag.ClassInfo.StudentCount sinh viên
                    </span>
                    <span class="meta-item">
                        <i class="fas fa-calendar-alt"></i>
                        Khoá: @ViewBag.ClassInfo.Year
                    </span>
                    <span class="meta-item">
                        <i class="fas fa-book"></i>
                        @ViewBag.ClassInfo.Subject
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.TotalExams</div>
                <div class="stat-label">Tổng đề thi</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.CompletedExams</div>
                <div class="stat-label">Đã hoàn thành</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.AverageSubmissionRate%</div>
                <div class="stat-label">Tỷ lệ nộp bài</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@ViewBag.ClassInfo.StudentCount</div>
                <div class="stat-label">Tổng sinh viên</div>
            </div>
        </div>
    </div>

    <!-- Content Tabs -->
    <div class="content-tabs">
        <button class="tab-btn active" data-tab="students">
            <i class="fas fa-users"></i>
            Danh sách sinh viên
        </button>
        <button class="tab-btn" data-tab="exams">
            <i class="fas fa-file-alt"></i>
            Đề thi
        </button>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Students Tab -->
        <div class="tab-panel active" data-panel="students">
            <div class="panel-header">
                <h3>Danh sách sinh viên (@ViewBag.Students.Count)</h3>
                <div class="panel-actions">
                    <input type="text" id="studentSearch" class="search-input" placeholder="Tìm kiếm sinh viên...">
                    <button class="export-btn">
                        <i class="fas fa-download"></i>
                        Xuất danh sách
                    </button>
                </div>
            </div>

            <div class="students-table-container">
                <table class="students-table">
                    <thead>
                        <tr>
                            <th>MSSV</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in ViewBag.Students)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>
                                    <span class="status-badge @(student.Status.ToLower())">
                                        @student.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons-group">
                                        <button class="action-btn view-btn" title="Xem kết quả thi" disabled>
                                            <i class="fas fa-chart-bar"></i>
                                            Kết quả
                                        </button>
                                        <button class="action-btn message-btn" title="Nhắn tin">
                                            <i class="fas fa-envelope"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Exams Tab -->
        <div class="tab-panel" data-panel="exams">
            <div class="panel-header">
                <h3>Đề thi đã giao (@ViewBag.Exams.Count)</h3>
                <div class="panel-actions">
                    <button class="create-exam-btn">
                        <i class="fas fa-plus"></i>
                        Tạo đề thi mới
                    </button>
                </div>
            </div>

            <div class="exams-grid">
                @foreach (var exam in ViewBag.Exams)
                {
                    <div class="exam-card">
                        <div class="exam-header">
                            <h4 class="exam-title">@exam.Name</h4>
                            <span class="exam-status @(exam.Status)">
                                @(exam.Status == "upcoming" ? "Sắp diễn ra" :
                                  exam.Status == "in-progress" ? "Đang diễn ra" : "Đã hoàn thành")
                            </span>
                        </div>

                        <div class="exam-meta">
                            <div class="exam-meta-item">
                                <i class="fas fa-calendar"></i>
                                @exam.Date.ToString("dd/MM/yyyy")
                            </div>
                            <div class="exam-meta-item">
                                <i class="fas fa-users"></i>
                                @exam.SubmittedCount/@exam.TotalStudents đã nộp
                            </div>
                        </div>

                        <div class="exam-actions">
                            <a href="@Url.Action("ExamDetails", "Teacher", new { examId = exam.Id })" class="exam-action-btn">
                                <i class="fas fa-eye"></i>
                                Xem chi tiết
                            </a>
                            @if (exam.Status == "completed")
                            {
                                <a href="@Url.Action("ViewResults", "Teacher", new { examId = exam.Id })" class="exam-action-btn">
                                    <i class="fas fa-chart-bar"></i>
                                    Xem kết quả
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/teacher/class-details.js"></script>
}