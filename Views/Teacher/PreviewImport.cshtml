@model List<E_TestHub.Models.Question>

@{
    ViewData["Title"] = "Preview Import Câu Hỏi";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link href="~/css/shared/dashboard.css" rel="stylesheet">
    <style>
        .preview-container {
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .preview-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .preview-header h2 {
            margin: 0 0 10px 0;
            font-size: 28px;
        }

        .preview-info {
            display: flex;
            gap: 30px;
            font-size: 16px;
            opacity: 0.95;
        }

        .preview-info-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .question-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border-left: 4px solid #667eea;
            transition: all 0.3s;
        }

        .question-card:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.12);
            transform: translateY(-2px);
        }

        .question-number {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .question-content {
            font-size: 16px;
            color: #333;
            margin-bottom: 15px;
            line-height: 1.6;
        }

        .question-content-editable {
            padding: 10px;
            border: 2px dashed transparent;
            border-radius: 6px;
            cursor: text;
            min-height: 40px;
        }

        .question-content-editable:hover {
            border-color: #667eea;
            background: #f8f9ff;
        }

        .question-content-editable:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            border-style: solid;
        }

        .question-options {
            display: grid;
            gap: 10px;
            margin-bottom: 15px;
        }

        .option-item {
            padding: 12px 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px solid transparent;
            transition: all 0.3s;
            position: relative;
        }

        .option-item.correct {
            background: #d4edda;
            border-color: #28a745;
            font-weight: 600;
            color: #155724;
        }

        .option-editable {
            border: 2px dashed transparent;
            padding: 8px;
            border-radius: 4px;
            cursor: text;
            display: inline-block;
            width: calc(100% - 80px);
        }

        .option-editable:hover {
            border-color: #667eea;
            background: white;
        }

        .option-editable:focus {
            outline: none;
            border-color: #667eea;
            border-style: solid;
        }

        .option-actions {
            float: right;
            display: flex;
            gap: 5px;
        }

        .btn-set-correct {
            background: #28a745;
            color: white;
            border: none;
            padding: 4px 8px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
        }

        .btn-set-correct:hover {
            background: #218838;
        }

        .edit-icon {
            color: #667eea;
            cursor: pointer;
            margin-left: 10px;
            font-size: 14px;
        }

        .edit-icon:hover {
            color: #764ba2;
        }

        .editable-select {
            padding: 5px 10px;
            border: 2px solid #667eea;
            border-radius: 4px;
            background: white;
            cursor: pointer;
            font-weight: 600;
        }

        .editable-input {
            padding: 5px 10px;
            border: 2px solid #667eea;
            border-radius: 4px;
            width: 80px;
            font-weight: 600;
        }

        .btn-delete-question {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
        }

        .btn-delete-question:hover {
            background: #c82333;
        }

        .question-metadata {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
            font-size: 14px;
        }

        .metadata-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #666;
        }

        .metadata-item i {
            color: #667eea;
        }

        .metadata-value {
            font-weight: 600;
            color: #333;
        }

        .action-buttons {
            position: sticky;
            bottom: 20px;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .btn-action {
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-confirm {
            background: #28a745;
            color: white;
        }

        .btn-confirm:hover {
            background: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
        }

        .btn-cancel:hover {
            background: #5a6268;
        }

        .btn-action:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .loading-overlay.active {
            display: flex;
        }

        .loading-content {
            background: white;
            padding: 30px 50px;
            border-radius: 12px;
            text-align: center;
        }

        .loading-spinner {
            font-size: 40px;
            color: #667eea;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
}

<div class="preview-container">
    <div class="preview-header">
        <h2><i class="fas fa-eye"></i> Preview Câu Hỏi Import</h2>
        <div class="preview-info">
            <div class="preview-info-item">
                <i class="fas fa-list"></i>
                <span>Tổng số: <strong>@Model.Count</strong> câu hỏi</span>
            </div>
            <div class="preview-info-item">
                <i class="fas fa-check-circle"></i>
                <span>Hãy kiểm tra kỹ trước khi xác nhận import</span>
            </div>
        </div>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var question = Model[i];
        <div class="question-card" data-index="@i">
            <button class="btn-delete-question" onclick="deleteQuestion(@i)">
                <i class="fas fa-trash"></i> Xóa
            </button>
            
            <div class="question-number">Câu @(i + 1)</div>
            
            <div class="question-content">
                <div class="question-content-editable" contenteditable="true" data-field="content" data-index="@i">@question.Content</div>
                <i class="fas fa-edit edit-icon" title="Click vào nội dung để chỉnh sửa"></i>
            </div>

            <div class="question-options">
                @for (int j = 0; j < question.Options.Count; j++)
                {
                    var optionLetter = ((char)('A' + j)).ToString();
                    var isCorrect = question.CorrectAnswer == optionLetter;
                    <div class="option-item @(isCorrect ? "correct" : "")" data-option="@optionLetter">
                        <strong>@optionLetter.</strong> 
                        <span class="option-editable" contenteditable="true" data-field="option" data-index="@i" data-option-index="@j">@question.Options[j]</span>
                        <div class="option-actions">
                            <button class="btn-set-correct" onclick="setCorrectAnswer(@i, '@optionLetter')">
                                <i class="fas fa-check"></i> Đặt đúng
                            </button>
                            @if (isCorrect)
                            {
                                <i class="fas fa-check-circle" style="color: #28a745; margin-left: 8px;"></i>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="question-metadata">
                <div class="metadata-item">
                    <i class="fas fa-book"></i>
                    <span>Môn: 
                        <input type="text" class="editable-input" value="@question.SubjectId" 
                               data-field="subjectId" data-index="@i" 
                               onchange="updateField(@i, 'subjectId', this.value)">
                    </span>
                </div>
                <div class="metadata-item">
                    <i class="fas fa-signal"></i>
                    <span>Độ khó: 
                        <select class="editable-select" data-field="difficulty" data-index="@i" 
                                onchange="updateField(@i, 'difficulty', this.value)">
                            <option value="Easy" selected="@(question.DifficultyLevel == E_TestHub.Models.DifficultyLevel.Easy)">Easy</option>
                            <option value="Medium" selected="@(question.DifficultyLevel == E_TestHub.Models.DifficultyLevel.Medium)">Medium</option>
                            <option value="Hard" selected="@(question.DifficultyLevel == E_TestHub.Models.DifficultyLevel.Hard)">Hard</option>
                        </select>
                    </span>
                </div>
                <div class="metadata-item">
                    <i class="fas fa-star"></i>
                    <span>Điểm: 
                        <input type="number" class="editable-input" value="@question.Score" 
                               min="0" step="0.5" 
                               data-field="score" data-index="@i" 
                               onchange="updateField(@i, 'score', this.value)">
                    </span>
                </div>
                <div class="metadata-item">
                    <i class="fas fa-check"></i>
                    <span>Đáp án đúng: <span class="metadata-value correct-answer-display">@question.CorrectAnswer</span></span>
                </div>
            </div>
        </div>
    }

    <div class="action-buttons">
        <button class="btn-action btn-cancel" onclick="window.location.href='@Url.Action("QuestionBank", "Teacher")'">
            <i class="fas fa-times"></i>
            Hủy bỏ
        </button>
        <button class="btn-action btn-confirm" id="btnConfirm" onclick="confirmImport()">
            <i class="fas fa-check"></i>
            Xác nhận Import (@Model.Count câu)
        </button>
    </div>
</div>

<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-content">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
        <h3 style="margin-top: 15px; color: #667eea;">Đang import câu hỏi...</h3>
        <p style="color: #666;">Vui lòng đợi trong giây lát</p>
    </div>
</div>

<!-- Hidden form for CSRF token -->
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Store questions data in memory for editing
        let questions = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));

        // Setup contenteditable blur handlers when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Handle question content editing
            document.querySelectorAll('.question-content-editable').forEach(function(el) {
                el.addEventListener('blur', function() {
                    const index = parseInt(this.dataset.index);
                    const value = this.innerText.trim();
                    updateField(index, 'content', value);
                });
            });

            // Handle option text editing
            document.querySelectorAll('.option-editable').forEach(function(el) {
                el.addEventListener('blur', function() {
                    const index = parseInt(this.dataset.index);
                    const optionIndex = parseInt(this.dataset.optionIndex);
                    const value = this.innerText.trim();
                    updateOption(index, optionIndex, value);
                });
            });
        });

        // Update field in questions array
        function updateField(index, field, value) {
            if (index < 0 || index >= questions.length) return;
            
            if (field === 'score') {
                questions[index][field] = parseFloat(value) || 0;
            } else if (field === 'difficulty') {
                questions[index][field] = value;
            } else if (field === 'subjectId') {
                questions[index][field] = value;
            } else if (field === 'content') {
                questions[index][field] = value;
            }
            
            console.log(`Updated question ${index} - ${field}:`, value);
        }

        // Update option text
        function updateOption(questionIndex, optionIndex, value) {
            if (questionIndex < 0 || questionIndex >= questions.length) return;
            
            // Check if options array exists and has correct structure
            if (!questions[questionIndex].options || !Array.isArray(questions[questionIndex].options)) {
                console.error(`Question ${questionIndex} has invalid options structure`);
                return;
            }
            
            if (optionIndex < 0 || optionIndex >= questions[questionIndex].options.length) return;
            
            // Options is List<string>, not List<object>, so directly assign the value
            questions[questionIndex].options[optionIndex] = value;
            console.log(`Updated question ${questionIndex}, option ${optionIndex}:`, value);
        }

        // Set correct answer
        function setCorrectAnswer(index, letter) {
            if (index < 0 || index >= questions.length) return;
            
            // Update data
            questions[index].correctAnswer = letter;
            
            // Update UI - remove all correct classes and add to selected
            const card = document.querySelector(`.question-card[data-index="${index}"]`);
            if (card) {
                // Remove 'correct' class and hide check icons from all options
                card.querySelectorAll('.option-item').forEach(function(opt) {
                    opt.classList.remove('correct');
                    
                    // Hide correct check icon
                    const checkIcon = opt.querySelector('.fa-check-circle');
                    if (checkIcon) {
                        checkIcon.style.display = 'none';
                    }
                });
                
                // Add 'correct' class to selected option
                const correctOption = card.querySelector(`.option-item[data-option="${letter}"]`);
                if (correctOption) {
                    correctOption.classList.add('correct');
                    
                    // Show check icon
                    const checkIcon = correctOption.querySelector('.fa-check-circle');
                    if (checkIcon) {
                        checkIcon.style.display = 'inline';
                    } else {
                        // Create check icon if not exists
                        const actionsDiv = correctOption.querySelector('.option-actions');
                        if (actionsDiv) {
                            const btn = actionsDiv.querySelector('.btn-set-correct');
                            const newIcon = document.createElement('i');
                            newIcon.className = 'fas fa-check-circle';
                            newIcon.style.color = '#28a745';
                            newIcon.style.marginLeft = '8px';
                            actionsDiv.appendChild(newIcon);
                        }
                    }
                }
            }
            
            console.log(`Set correct answer for question ${index}:`, letter);
        }

        // Delete question
        function deleteQuestion(index) {
            if (index < 0 || index >= questions.length) return;
            
            if (!confirm('Bạn có chắc muốn xóa câu hỏi này?')) {
                return;
            }
            
            // Remove from array
            questions.splice(index, 1);
            
            // Remove from DOM
            const card = document.querySelector(`.question-card[data-index="${index}"]`);
            if (card) {
                card.remove();
            }
            
            // Update indices for remaining cards
            document.querySelectorAll('.question-card').forEach(function(card, newIndex) {
                card.dataset.index = newIndex;
                card.querySelector('.question-number').innerText = `Câu ${newIndex + 1}`;
                
                // Update all data-index attributes within card
                card.querySelectorAll('[data-index]').forEach(function(el) {
                    el.dataset.index = newIndex;
                });
                
                // Update onclick handlers
                card.querySelectorAll('[onclick*="updateField"]').forEach(function(el) {
                    const onclick = el.getAttribute('onclick');
                    el.setAttribute('onclick', onclick.replace(/\d+/, newIndex));
                });
                
                card.querySelectorAll('[onclick*="setCorrectAnswer"]').forEach(function(el) {
                    const onclick = el.getAttribute('onclick');
                    el.setAttribute('onclick', onclick.replace(/setCorrectAnswer\(\d+/, `setCorrectAnswer(${newIndex}`));
                });
                
                card.querySelector('.btn-delete-question').setAttribute('onclick', `deleteQuestion(${newIndex})`);
            });
            
            // Update confirm button count
            document.getElementById('btnConfirm').innerHTML = `<i class="fas fa-check"></i> Xác nhận Import (${questions.length} câu)`;
            
            console.log(`Deleted question ${index}. Remaining:`, questions.length);
        }

        function confirmImport() {
            if (questions.length === 0) {
                alert('Không có câu hỏi nào để import!');
                return;
            }

            if (!confirm(`Bạn có chắc chắn muốn import ${questions.length} câu hỏi này?`)) {
                return;
            }

            const btnConfirm = document.getElementById('btnConfirm');
            btnConfirm.disabled = true;
            document.getElementById('loadingOverlay').classList.add('active');

            // Send edited questions to server
            $.ajax({
                url: '@Url.Action("ConfirmImport", "Teacher")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    questions: questions,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                }),
                success: function(response) {
                    document.getElementById('loadingOverlay').classList.remove('active');
                    
                    if (response.success) {
                        alert(response.message);
                        window.location.href = '@Url.Action("QuestionBank", "Teacher")';
                    } else {
                        alert('Lỗi: ' + response.message);
                        if (response.errors && response.errors.length > 0) {
                            console.error('Import errors:', response.errors);
                        }
                        btnConfirm.disabled = false;
                    }
                },
                error: function(xhr) {
                    document.getElementById('loadingOverlay').classList.remove('active');
                    const errorMsg = xhr.responseJSON?.message || 'Có lỗi xảy ra khi import câu hỏi.';
                    alert(errorMsg);
                    btnConfirm.disabled = false;
                }
            });
        }
    </script>
}
