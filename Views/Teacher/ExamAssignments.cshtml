@model List<E_TestHub.Models.ExamSchedule>
@{
    ViewData["Title"] = "Quản Lý Phân Công Đề Thi";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-calendar-check me-2 text-primary"></i>
                        Quản Lý Phân Công Đề Thi
                    </h2>
                    <p class="text-muted mb-0">Danh sách các đề thi đã được gán cho lớp học</p>
                </div>
                <a href="@Url.Action("AssignExam")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Gán đề thi mới
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    @{
        var totalAssignments = Model.Count;
        var activeAssignments = Model.Count(s => !s.IsClosed && s.EndTime > DateTime.Now);
        var upcomingAssignments = Model.Count(s => s.StartTime > DateTime.Now);
        var closedAssignments = Model.Count(s => s.IsClosed || s.EndTime <= DateTime.Now);
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-2x text-primary mb-2"></i>
                    <h5 class="mb-0">@totalAssignments</h5>
                    <small class="text-muted">Tổng phân công</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-play-circle fa-2x text-success mb-2"></i>
                    <h5 class="mb-0">@activeAssignments</h5>
                    <small class="text-muted">Đang diễn ra</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h5 class="mb-0">@upcomingAssignments</h5>
                    <small class="text-muted">Sắp diễn ra</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-secondary mb-2"></i>
                    <h5 class="mb-0">@closedAssignments</h5>
                    <small class="text-muted">Đã kết thúc</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Assignments List -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-clipboard-list me-2"></i>
                Danh Sách Phân Công
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="40">#</th>
                                <th>Đề thi</th>
                                <th>Môn học</th>
                                <th>Lớp học</th>
                                <th>Thời gian bắt đầu</th>
                                <th>Thời gian kết thúc</th>
                                <th width="120" class="text-center">Trạng thái</th>
                                <th width="150" class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var schedule = Model[i];
                                var now = DateTime.Now;
                                var status = schedule.IsClosed ? "Đã đóng" :
                                            schedule.EndTime <= now ? "Hết hạn" :
                                            schedule.StartTime > now ? "Sắp diễn ra" :
                                            "Đang diễn ra";
                                var statusClass = schedule.IsClosed ? "secondary" :
                                                 schedule.EndTime <= now ? "dark" :
                                                 schedule.StartTime > now ? "warning" :
                                                 "success";
                                var statusIcon = schedule.IsClosed ? "lock" :
                                                schedule.EndTime <= now ? "stop-circle" :
                                                schedule.StartTime > now ? "clock" :
                                                "play-circle";

                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <strong>@(schedule.Exam?.Title ?? "N/A")</strong>
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-list-ol me-1"></i>@(schedule.Exam?.QuestionCount ?? 0) câu
                                            <span class="mx-1">|</span>
                                            <i class="fas fa-star me-1"></i>@(schedule.Exam?.TotalScore ?? 0) điểm
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@(schedule.Exam?.SubjectName ?? "N/A")</span>
                                    </td>
                                    <td>
                                        <strong>@(schedule.Class?.Name ?? "N/A")</strong>
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-users me-1"></i>@(schedule.Class?.Students.Count ?? 0) sinh viên
                                        </small>
                                    </td>
                                    <td>
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>
                                        @schedule.StartTime.ToString("dd/MM/yyyy")
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @schedule.StartTime.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <i class="fas fa-calendar-alt me-1 text-danger"></i>
                                        @schedule.EndTime.ToString("dd/MM/yyyy")
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @schedule.EndTime.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-@statusClass">
                                            <i class="fas fa-@statusIcon"></i> @status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            @if (!schedule.IsClosed && schedule.EndTime > now)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-warning" 
                                                        onclick="closeAssignment('@schedule.ApiId', '@schedule.Exam?.Title')" 
                                                        title="Đóng phân công">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            }
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteAssignment('@schedule.ApiId', '@schedule.Exam?.Title')" 
                                                    title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có phân công nào</h5>
                    <p class="text-muted">Hãy gán đề thi cho lớp học để sinh viên có thể làm bài.</p>
                    <a href="@Url.Action("AssignExam")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Gán đề thi đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function closeAssignment(scheduleId, examTitle) {
            Swal.fire({
                title: 'Đóng phân công đề thi',
                html: `Bạn có chắc chắn muốn đóng phân công đề thi <strong>"${examTitle}"</strong>?<br><br>
                       <i class="fas fa-lock text-warning"></i> 
                       <strong>Lưu ý:</strong> Sau khi đóng, sinh viên sẽ không thể làm bài nữa.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-lock me-1"></i> Đóng',
                cancelButtonText: '<i class="fas fa-times me-1"></i> Hủy',
                showLoaderOnConfirm: true,
                preConfirm: () => {
                    return $.ajax({
                        url: '@Url.Action("CloseAssignment", "Teacher")',
                        type: 'POST',
                        data: {
                            id: scheduleId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        }
                    }).then(response => {
                        if (!response.success) {
                            throw new Error(response.message);
                        }
                        return response;
                    }).catch(error => {
                        Swal.showValidationMessage(`Lỗi: ${error.message || 'Có lỗi xảy ra khi đóng phân công.'}`);
                    });
                },
                allowOutsideClick: () => !Swal.isLoading()
            }).then((result) => {
                if (result.isConfirmed && result.value) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã đóng!',
                        text: result.value.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                }
            });
        }

        function deleteAssignment(scheduleId, examTitle) {
            Swal.fire({
                title: 'Xác nhận xóa phân công',
                html: `Bạn có chắc chắn muốn xóa phân công đề thi <strong>"${examTitle}"</strong>?<br><br>
                       <i class="fas fa-exclamation-triangle text-danger"></i> 
                       <strong>Lưu ý:</strong> Hành động này không thể hoàn tác!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-trash me-1"></i> Xóa',
                cancelButtonText: '<i class="fas fa-times me-1"></i> Hủy',
                showLoaderOnConfirm: true,
                preConfirm: () => {
                    return $.ajax({
                        url: '@Url.Action("DeleteAssignment", "Teacher")',
                        type: 'POST',
                        data: {
                            id: scheduleId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        }
                    }).then(response => {
                        if (!response.success) {
                            throw new Error(response.message);
                        }
                        return response;
                    }).catch(error => {
                        Swal.showValidationMessage(`Lỗi: ${error.message || 'Có lỗi xảy ra khi xóa phân công.'}`);
                    });
                },
                allowOutsideClick: () => !Swal.isLoading()
            }).then((result) => {
                if (result.isConfirmed && result.value) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã xóa!',
                        text: result.value.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                }
            });
        }

        // Toast notifications for TempData
        $(document).ready(function() {
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                });
                Toast.fire({
                    icon: 'success',
                    title: '@TempData["SuccessMessage"]'
                });
                </text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 4000,
                    timerProgressBar: true
                });
                Toast.fire({
                    icon: 'error',
                    title: '@TempData["ErrorMessage"]'
                });
                </text>
            }
        });
    </script>

    @Html.AntiForgeryToken()
}
