@model E_TestHub.Models.Subject
@{
    ViewData["Title"] = "Chi tiết Môn học";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-info-circle text-primary"></i>
                        Chi tiết Môn học
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Môn học</a></li>
                            <li class="breadcrumb-item active">@Model.Code</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Subject Info Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-book"></i>
                        Thông tin Môn học
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="text-muted small">Mã Môn học</label>
                            <h4 class="mb-0">
                                <span class="badge bg-info text-dark">@Model.Code</span>
                            </h4>
                        </div>
                        <div class="col-md-8">
                            <label class="text-muted small">Tên Môn học</label>
                            <h4 class="mb-0">@Model.Name</h4>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="text-muted small">Mô tả</label>
                            <p class="mb-0">
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <em class="text-muted">Không có mô tả</em>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </p>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-muted small">Ngày tạo</label>
                            <p class="mb-0">
                                <i class="fas fa-calendar-plus text-primary"></i>
                                @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">Cập nhật lần cuối</label>
                                <p class="mb-0">
                                    <i class="fas fa-calendar-check text-success"></i>
                                    @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Statistics Card (Placeholder for future features) -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i>
                        Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="stat-box">
                                <h3 class="text-primary mb-0">0</h3>
                                <p class="text-muted small mb-0">Bài thi</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <h3 class="text-success mb-0">0</h3>
                                <p class="text-muted small mb-0">Câu hỏi</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <h3 class="text-warning mb-0">0</h3>
                                <p class="text-muted small mb-0">Lớp học</p>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-info-circle"></i>
                        Thống kê chi tiết sẽ được cập nhật khi các module Exam, Question và Class được triển khai.
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i>
                        Thao tác
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i>
                            Chỉnh sửa thông tin môn học
                        </a>
                        <button type="button" class="btn btn-outline-primary btn-lg" disabled>
                            <i class="fas fa-list"></i>
                            Xem danh sách bài thi (Chưa khả dụng)
                        </button>
                        <button type="button" class="btn btn-outline-success btn-lg" disabled>
                            <i class="fas fa-question-circle"></i>
                            Xem ngân hàng câu hỏi (Chưa khả dụng)
                        </button>
                        <button type="button" class="btn btn-danger btn-lg" id="deleteBtn">
                            <i class="fas fa-trash"></i>
                            Xóa môn học
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function () {
            $('#deleteBtn').on('click', function () {
                if (confirm('Bạn có chắc chắn muốn xóa môn học "@Model.Name" (@Model.Code)?\n\nLưu ý: Môn học có thể đang được sử dụng trong các bài thi.')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Subject")/@Model.Id',
                        type: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                window.location.href = '@Url.Action("Index", "Subject")';
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert('Đã xảy ra lỗi khi xóa môn học.');
                        }
                    });
                }
            });
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .stat-box {
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
    }

    .badge {
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
    }

    label.small {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>
