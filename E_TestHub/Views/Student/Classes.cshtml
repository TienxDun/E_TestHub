                <div class="class-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="class-info">
                    <h3 class="class-name">TM231H</h3>
                    <p class="class-students">36 sinh viên</p>
                    <p class="class-year">Khoá: 2023 - 2027</p>
                </div>
            </div>
        </a>

        <!-- Class Card 3 -->
        <a href="@Url.Action("ClassDetails", "Student", new { classId = "SE214H" })" class="class-card" data-class-name="SE214H" data-students="120" data-year="2023 - 2027">
            <div class="class-card-content">
                <div class="class-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="class-info">
                    <h3 class="class-name">SE214H</h3>
                    <p class="class-students">120 sinh viên</p>
                    <p class="class-year">Khoá: 2023 - 2027</p>
                </div>
            </div>
        </a>

        <!-- Class Card 4 -->
        <a href="@Url.Action("ClassDetails", "Student", new { classId = "IT001" })" class="class-card" data-class-name="IT001" data-students="180" data-year="2023 - 2027">
            <div class="class-card-content">
                <div class="class-icon">
