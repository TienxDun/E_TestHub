@{
    ViewData["Title"] = "Thông tin bài thi - Sinh Viên";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link href="~/css/shared/dashboard.css" rel="stylesheet">
    <link href="~/css/student/exam-info.css" rel="stylesheet">
}

<div class="exam-info-container">
    <div class="exam-info-header">
        <h1 class="exam-info-title">Kiểm tra giữa kỳ Công nghệ phần mềm nâng cao</h1>
        <p class="exam-info-subtitle">Thông tin chi tiết về bài thi</p>
        
        @if (ViewBag.ExamStatus == "in-progress")
        {
            <div class="exam-status-banner in-progress">
                <i class="fas fa-play-circle"></i>
                Bài thi đang diễn ra - Có thể vào thi ngay
            </div>
        }
        else if (ViewBag.ExamStatus == "upcoming")
        {
            <div class="exam-status-banner upcoming">
                <i class="fas fa-clock"></i>
                Bài thi chưa bắt đầu - Vui lòng chờ đến giờ thi
            </div>
        }
        else if (ViewBag.ExamStatus == "completed")
        {
            <div class="exam-status-banner completed">
                <i class="fas fa-check-circle"></i>
                Bài thi đã kết thúc
            </div>
        }
    </div>
    
    <div class="exam-details-card">
        <div class="exam-detail-row">
            <div class="exam-detail-label">
                <i class="fas fa-clock"></i>
                Thời gian làm bài
            </div>
            <div class="exam-detail-value">90 phút</div>
        </div>
        
        <div class="exam-detail-row">
            <div class="exam-detail-label">
                <i class="fas fa-calendar"></i>
                Thời gian vào thi
            </div>
            <div class="exam-detail-value">09-10-2025</div>
        </div>
        
        <div class="exam-detail-row">
            <div class="exam-detail-label">
                <i class="fas fa-question-circle"></i>
                Số lượng câu hỏi
            </div>
            <div class="exam-detail-value">30</div>
        </div>
        
        <div class="exam-detail-row">
            <div class="exam-detail-label">
                <i class="fas fa-chart-bar"></i>
                Loại đề
            </div>
            <div class="exam-detail-value">Trắc nghiệm</div>
        </div>
        
        <div class="exam-detail-row">
            <div class="exam-detail-label">
                <i class="fas fa-redo"></i>
                Lần thử
            </div>
            <div class="exam-detail-value">1 lần</div>
        </div>
    </div>
    
    <div class="exam-instructions">
        <h4><i class="fas fa-info-circle"></i> Hướng dẫn làm bài</h4>
        <ul>
            <li>Đọc kỹ đề bài trước khi trả lời</li>
            <li>Thời gian làm bài được tính từ lúc bắt đầu bài thi</li>
            <li>Bài thi sẽ tự động nộp khi hết thời gian</li>
            <li>Không được sử dụng tài liệu tham khảo</li>
            <li>Hãy kiểm tra kỹ các câu trả lời trước khi nộp bài</li>
        </ul>
    </div>
    
    <div class="exam-actions">
        @if (ViewBag.ExamStatus == "in-progress")
        {
            <a href="@Url.Action("TakeExam", "Student", new { examId = ViewBag.ExamId })" class="exam-action-btn primary">
                <i class="fas fa-play"></i>
                Bắt đầu thi
            </a>
        }
        else if (ViewBag.ExamStatus == "upcoming")
        {
            <div class="exam-action-btn disabled">
                <i class="fas fa-clock"></i>
                Chưa đến giờ thi
            </div>
        }
        else if (ViewBag.ExamStatus == "completed")
        {
            <a href="@Url.Action("ViewResults", "Student", new { examId = ViewBag.ExamId })" class="exam-action-btn success">
                <i class="fas fa-eye"></i>
                Xem kết quả
            </a>
        }
        
        <a href="@Url.Action("MyExams", "Student")" class="exam-action-btn secondary">
            <i class="fas fa-arrow-left"></i>
            Quay lại danh sách
        </a>
    </div>
</div>