<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - eTestHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <nav class="dashboard-sidebar">
            <div class="dashboard-sidebar-nav" style="display: flex; flex-direction: column; justify-content: space-between; height: 100%;">
                <div>
                    @{
                        var userRole = Context.Session.GetString("UserRole");
                        var dashboardController = userRole switch
                        {
                            "Admin" => "Admin",
                            "Teacher" => "Teacher", 
                            "Student" => "Student",
                            _ => "Home"
                        };
                        var isActive = ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "";
                    }
                    <a href="@Url.Action("Dashboard", dashboardController)" class="dashboard-nav-item @isActive" title="Dashboard">
                        <i class="fas fa-home"></i>
                    </a>
                    @if (userRole == "Student")
                    {
                        <a href="@Url.Action("Classes", "Student")" class="dashboard-nav-item" title="Danh sách lớp">
                            <i class="fas fa-university"></i>
                        </a>
                        <a href="@Url.Action("MyExams", "Student")" class="dashboard-nav-item" title="Bài thi của tôi">
                            <i class="fas fa-file-alt"></i>
                        </a>
                    }
                    else if (userRole == "Teacher")
                    {
                        <a href="@Url.Action("ManageClasses", "Teacher")" class="dashboard-nav-item" title="Lớp đang giảng dạy">
                            <i class="fas fa-users"></i>
                        </a>
                        <a href="@Url.Action("QuestionBank", "Teacher")" class="dashboard-nav-item" title="Ngân hàng câu hỏi">
                            <i class="fas fa-folder"></i>
                        </a>
                        <a href="@Url.Action("ExamManagement", "Teacher")" class="dashboard-nav-item" title="Quản lý bài thi">
                            <i class="fas fa-clipboard-list"></i>
                        </a>
                        <a href="@Url.Action("ViewResults", "Teacher")" class="dashboard-nav-item" title="Xem kết quả thi">
                            <i class="fas fa-chart-line"></i>
                        </a>
                    }
                    else if (userRole == "Admin")
                    {
                        <a href="@Url.Action("UserManagement", "Admin")" class="dashboard-nav-item" title="Quản lý người dùng">
                            <i class="fas fa-users"></i>
                        </a>
                        <a href="@Url.Action("SystemSettings", "Admin")" class="dashboard-nav-item" title="Cài đặt hệ thống">
                            <i class="fas fa-cog"></i>
                        </a>
                    }
                    <a href="#" class="dashboard-nav-item" title="Thống kê">
                        <i class="fas fa-chart-bar"></i>
                    </a>
                </div>
                <div>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-bell"></i>
                    </a>
                    @if (userRole == "Student")
                    {
                        <a href="@Url.Action("Profile", "Student")" class="dashboard-nav-item" title="Quản lý tài khoản">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                    else if (userRole == "Teacher")
                    {
                        <a href="@Url.Action("Profile", "Teacher")" class="dashboard-nav-item" title="Quản lý tài khoản">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                    else if (userRole == "Admin")
                    {
                        <a href="@Url.Action("Profile", "Admin")" class="dashboard-nav-item" title="Quản lý tài khoản">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                    else
                    {
                        <a href="#" class="dashboard-nav-item" title="Thông tin cá nhân">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                    <a href="@Url.Action("Logout", "Home")" class="dashboard-nav-item" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');" title="Đăng xuất">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="dashboard-main-content">
            <div class="container-fluid px-4 py-4">
                <div class="dashboard-content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>