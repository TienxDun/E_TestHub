<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - eTestHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <nav class="dashboard-sidebar">
            <div class="dashboard-sidebar-nav" style="display: flex; flex-direction: column; justify-content: space-between; height: 100vh;">
                <div>
                    <a href="@Url.Action("Dashboard_GV", "Home")" class="dashboard-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard_GV" ? "active" : "")">
                        <i class="fas fa-home"></i>
                    </a>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-university"></i>
                    </a>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-folder"></i>
                    </a>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-chart-bar"></i>
                    </a>
                </div>
                <div>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-bell"></i>
                    </a>
                    <a href="#" class="dashboard-nav-item">
                        <i class="fas fa-user"></i>
                    </a>
                    <a href="@Url.Action("Logout", "Home")" class="dashboard-nav-item">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="dashboard-main-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>