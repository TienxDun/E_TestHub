@{
    ViewData["Title"] = "eTestHub - Nền tảng thi trắc nghiệm online";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Hệ thống Quản lý Thi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/dashboard_gv.css" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <nav class="dashboard-sidebar">
            <div class="dashboard-sidebar-nav" style="display: flex; flex-direction: column; justify-content: space-between; height: 100vh;">
            <div>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-home"></i>
                </a>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-university"></i>
                </a>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-folder"></i>
                </a>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-chart-bar"></i>
                </a>
            </div>
            <div>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-bell"></i>
                </a>
                <a href="#" class="dashboard-nav-item">
                <i class="fas fa-user"></i>
                </a>
            </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="dashboard-main-content">
            <!-- Welcome Section -->
            <div class="dashboard-welcome-section">
                <h1 class="dashboard-welcome-title">Xin chào,</h1>
                <h2 class="dashboard-welcome-name">Võ Nguyễn Thanh Hiếu</h2>
            </div>

            <!-- Action Cards -->
            <div class="dashboard-action-cards">
                <a href="@Url.Action("QuestionBank", "Dashboard")" class="dashboard-action-card">
                    <div class="dashboard-action-icon">
                        <i class="fas fa-university"></i>
                    </div>
                    <h3 class="dashboard-action-title">Ngân hàng câu hỏi</h3>
                </a>

                <a href="@Url.Action("ExamManagement", "Dashboard")" class="dashboard-action-card">
                    <div class="dashboard-action-icon">
                        <i class="fas fa-folder"></i>
                    </div>
                    <h3 class="dashboard-action-title">Quản lý đề thi</h3>
                </a>

                <a href="@Url.Action("ViewResults", "Dashboard")" class="dashboard-action-card">
                    <div class="dashboard-action-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="dashboard-action-title">Xem kết quả thi</h3>
                </a>
            </div>

            <!-- Content Sections -->
            <div class="dashboard-content-sections">
                <!-- Teaching Classes Section -->
                <div class="dashboard-section">
                    <div class="dashboard-section-header">
                        <h3 class="dashboard-section-title">Lớp đang giảng dạy</h3>
                        <a href="@Url.Action("AllClasses", "Dashboard")" class="dashboard-view-more-btn">
                            <i class="fas fa-external-link-alt"></i>
                            Xem thêm
                        </a>
                    </div>

                    <ul class="dashboard-item-list">
                        <li class="dashboard-item">
                            <div class="dashboard-item-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="dashboard-item-content">
                                <h4 class="dashboard-item-title">PM233H</h4>
                                <p class="dashboard-item-subtitle">360 sinh viên</p>
                                <p class="dashboard-item-subtitle">Khóa: 2023 - 2027</p>
                            </div>
                        </li>

                        <li class="dashboard-item">
                            <div class="dashboard-item-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="dashboard-item-content">
                                <h4 class="dashboard-item-title">TM231H</h4>
                                <p class="dashboard-item-subtitle">36 sinh viên</p>
                                <p class="dashboard-item-subtitle">Khóa: 2023 - 2027</p>
                            </div>
                        </li>
                    </ul>
                </div>

                <!-- Recent Exams Section -->
                <div class="dashboard-section">
                    <div class="dashboard-section-header">
                        <h3 class="dashboard-section-title">Kỳ thi đã tạo gần đây</h3>
                        <a href="@Url.Action("AllExams", "Dashboard")" class="dashboard-view-more-btn">
                            <i class="fas fa-external-link-alt"></i>
                            Xem thêm
                        </a>
                    </div>

                    <ul class="dashboard-item-list">
                        <li class="dashboard-item">
                            <div class="dashboard-item-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="dashboard-item-content">
                                <h4 class="dashboard-item-title">Xác suất thống kê</h4>
                                <p class="dashboard-item-subtitle">Thứ Sáu, 15-08-2025</p>
                                <p class="dashboard-item-subtitle">Thời gian làm bài: 90 phút</p>
                            </div>
                        </li>

                        <li class="dashboard-item">
                            <div class="dashboard-item-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="dashboard-item-content">
                                <h4 class="dashboard-item-title">Xác suất thống kê</h4>
                                <p class="dashboard-item-subtitle">Thứ Sáu, 15-08-2025</p>
                                <p class="dashboard-item-subtitle">Thời gian làm bài: 90 phút</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>